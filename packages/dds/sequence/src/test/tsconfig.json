{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "../../dist/test",
		"types": ["mocha"],
		"moduleResolution": "node16",
		"declaration": false,
		"declarationMap": false,
		"skipLibCheck": true,
