{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": false,
		"incremental": true,
		"inlineSources": true,
		"jsx": "react",
		"lib": ["ES2017", "ES2018.Promise", "ES2018.AsyncIterable", "DOM", "DOM.Iterable"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"outDir": "./lib",
		"pretty": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2020",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "src/test/**"]
}
