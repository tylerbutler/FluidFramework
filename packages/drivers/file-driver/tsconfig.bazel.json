{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"inlineSources": true,
		"jsx": "react",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"noImplicitAny": false,
		"noUnusedLocals": false,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"types": ["node"],
		"exactOptionalPropertyTypes": false,
		"noUncheckedIndexedAccess": false,
		"rootDir": "./src",
		"paths": {
			"@fluid-internal/client-utils": ["../../common/client-utils/lib/index.d.ts"],
			"@fluid-internal/client-utils/*": ["../../common/client-utils/lib/*"],
			"@fluidframework/core-interfaces": ["../../common/core-interfaces/lib/index.d.ts"],
			"@fluidframework/core-interfaces/*": ["../../common/core-interfaces/lib/*"],
			"@fluidframework/core-utils": ["../../common/core-utils/lib/index.d.ts"],
			"@fluidframework/core-utils/internal": ["../../common/core-utils/lib/index.d.ts"],
			"@fluidframework/core-utils/*": ["../../common/core-utils/lib/*"],
			"@fluidframework/driver-definitions": ["../../common/driver-definitions/lib/index.d.ts"],
			"@fluidframework/driver-definitions/internal": ["../../common/driver-definitions/lib/index.d.ts"],
			"@fluidframework/driver-definitions/*": ["../../common/driver-definitions/lib/*"],
			"@fluidframework/driver-utils": ["../../loader/driver-utils/lib/index.d.ts"],
			"@fluidframework/driver-utils/internal": ["../../loader/driver-utils/lib/index.d.ts"],
			"@fluidframework/driver-utils/*": ["../../loader/driver-utils/lib/*"],
			"@fluidframework/replay-driver": ["../replay-driver/lib/index.d.ts"],
			"@fluidframework/replay-driver/internal": ["../replay-driver/lib/index.d.ts"],
			"@fluidframework/replay-driver/*": ["../replay-driver/lib/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules", "src/test/**"]
}
