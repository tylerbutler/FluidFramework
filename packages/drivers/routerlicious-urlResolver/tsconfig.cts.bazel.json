{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "incremental": true,
    "inlineSources": true,
    "jsx": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "types": []
  },
  "include": ["src/**/*.cts"]
}
