load("@aspect_rules_ts//ts:defs.bzl", "ts_project")
load("@npm//:defs.bzl", "npm_link_all_packages")

package(default_visibility = ["//visibility:public"])

# Link npm packages for this workspace package
npm_link_all_packages(name = "node_modules")

# Compile .cts files first (for ESM build)
ts_project(
    name = "routerlicious_urlresolver_cts",
    srcs = glob(["src/**/*.cts"]),
    composite = True,
    declaration = True,
    declaration_map = False,
    incremental = True,
    out_dir = "lib",
    root_dir = "src",
    source_map = True,
    tsconfig = ":tsconfig.cts.bazel.json",
    deps = [
        ":node_modules/nconf",
    ],
)

# Compile .cts files for CJS build
ts_project(
    name = "routerlicious_urlresolver_cts_cjs",
    srcs = glob(["src/**/*.cts"]),
    composite = True,
    declaration = True,
    declaration_map = False,
    incremental = True,
    out_dir = "dist",
    root_dir = "src",
    source_map = True,
    tsconfig = ":tsconfig.cts.bazel.json",
    deps = [
        ":node_modules/nconf",
    ],
)

# ESM compilation
ts_project(
    name = "routerlicious_urlresolver_esm",
    srcs = glob(
        ["src/**/*.ts"],
        exclude = [
            "src/test/**",
            "src/**/*.cts",
        ],
    ),
    composite = True,
    declaration = True,
    declaration_map = True,
    incremental = True,
    out_dir = "lib",
    root_dir = "src",
    source_map = True,
    tsconfig = ":tsconfig.bazel.json",
    deps = [
        ":node_modules/nconf",
        ":routerlicious_urlresolver_cts",
        "//packages/common/core-interfaces:core_interfaces_esm",
        "//packages/common/core-utils:core_utils_esm",
        "//packages/common/driver-definitions:driver_definitions_esm",
    ],
)

# CommonJS compilation
ts_project(
    name = "routerlicious_urlresolver_cjs",
    srcs = glob(
        ["src/**/*.ts"],
        exclude = [
            "src/test/**",
            "src/**/*.cts",
        ],
    ),
    composite = True,
    declaration = True,
    declaration_map = True,
    incremental = True,
    out_dir = "dist",
    root_dir = "src",
    source_map = True,
    tsconfig = ":tsconfig.cjs.bazel.json",
    deps = [
        ":node_modules/nconf",
        ":routerlicious_urlresolver_cts_cjs",
        "//packages/common/core-interfaces:core_interfaces_cjs",
        "//packages/common/core-utils:core_utils_cjs",
        "//packages/common/driver-definitions:driver_definitions_cjs",
    ],
)

# Default target builds both ESM and CJS
filegroup(
    name = "routerlicious_urlresolver",
    srcs = [
        ":routerlicious_urlresolver_esm",
        ":routerlicious_urlresolver_cjs",
    ],
)
