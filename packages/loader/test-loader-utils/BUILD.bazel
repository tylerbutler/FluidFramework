# Run API Extractor: api-extractor/api-extractor-lint-index.esm.json
sh_binary(
    name = "api_reports_api-extractor-lint-index.esm",
    srcs = ["//tools/bazel:run-api-extractor.sh"],
    args = [
        "packages/loader/test-loader-utils",
        "api-extractor/api-extractor-lint-index.esm.json",
    ],
    data = [
        ":test_loader_utils_esm",
        "api-extractor/api-extractor-lint-index.esm.json",
        "tsconfig.json",
        "//tools/bazel:run-api-extractor.sh",
    ] + glob(["api-report/*.api.md"], allow_empty = True),
    tags = ["api-extraction"],
)

# Default target builds both ESM and CJS

# js_library wrapping compiled outputs
# Provides JsInfo for npm_package and includes package.json with exports field
js_library(
    name = "lib",
    srcs = [
        ":test_loader_utils_esm",
        ":test_loader_utils_cjs",
        "package.json",
    ],
)

# npm_package makes this linkable via npm_link_all_packages
# This enables TypeScript to resolve subpath exports (/internal, /legacy, etc.)
npm_package(
    name = "pkg",
    srcs = [":lib"],
    visibility = ["//visibility:public"],
)

# Legacy filegroup for backward compatibility
filegroup(
    name = "test_loader_utils",
    srcs = [
        ":test_loader_utils_esm",
        ":test_loader_utils_cjs",
    ],
)
