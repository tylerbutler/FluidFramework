{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"inlineSources": true,
		"jsx": "react",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"types": [],
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": false,
		"module": "Node16",
		"moduleResolution": "Node16",
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
		"rootDirs": ["./src", "./dist"],
		"paths": {
			"@fluidframework/core-interfaces": ["../core-interfaces/dist/index.d.ts"],
			"@fluidframework/core-interfaces/*": ["../core-interfaces/dist/*"],
			"@fluidframework/core-utils": ["../core-utils/dist/index.d.ts"],
			"@fluidframework/core-utils/*": ["../core-utils/dist/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"]
}
