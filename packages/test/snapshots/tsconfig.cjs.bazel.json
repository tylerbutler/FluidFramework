{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"inlineSources": true,
		"jsx": "react",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"pretty": true,
		"sourceMap": true,
		"strict": false,
		"target": "ES2021",
		"exactOptionalPropertyTypes": false,
		"noUncheckedIndexedAccess": true,
		"module": "Node16",
		"moduleResolution": "Node16",
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["lib", "node_modules", "src/test", "src/package.json"]
}
