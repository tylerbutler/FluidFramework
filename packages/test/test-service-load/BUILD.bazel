# Copy CJS package.json marker to dist/
genrule(
    name = "copy_cjs_package_json",
    srcs = ["//common/build/build-common/src/cjs:package.json"],
    outs = ["dist/package.json"],
    cmd = "cp $< $@",
)

# Combined library
js_library(
    name = "lib",
    srcs = [
        ":test_service_load_esm",
        ":test_service_load_cjs",
        ":copy_cjs_package_json",
        "package.json",
        "src/package.json",
    ],
)

# NPM package
npm_package(
    name = "pkg",
    srcs = [":lib"],
    package = "@fluid-internal/test-service-load",
)

# Backward compatibility filegroup
filegroup(
    name = "test-service-load",
    srcs = [":lib"],
)

