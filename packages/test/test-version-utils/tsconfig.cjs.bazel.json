{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"inlineSources": true,
		"lib": ["ES2020"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"exactOptionalPropertyTypes": false,
		"noUncheckedIndexedAccess": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*", "src/package.json"]
}
