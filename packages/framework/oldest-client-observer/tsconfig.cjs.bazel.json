{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"incremental": true,
		"inlineSources": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"noImplicitAny": false,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"outDir": "./dist",
		"pretty": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"types": []
	},
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"]
}
