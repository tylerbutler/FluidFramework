{
	"compilerOptions": {
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"inlineSources": true,
		"jsx": "react",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "Node16",
		"moduleResolution": "Node16",
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"pretty": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2021",
		"types": [],
		"exactOptionalPropertyTypes": false,
		"noUncheckedIndexedAccess": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"paths": {
			"@fluid-internal/client-utils": ["../../common/client-utils/dist/index.d.ts"],
			"@fluid-internal/client-utils/*": ["../../common/client-utils/dist/*"],
			"@fluidframework/core-interfaces": ["../../common/core-interfaces/dist/index.d.ts"],
			"@fluidframework/core-interfaces/*": ["../../common/core-interfaces/dist/*"],
			"@fluidframework/core-utils": ["../../common/core-utils/dist/index.d.ts"],
			"@fluidframework/core-utils/internal": ["../../common/core-utils/dist/index.d.ts"],
			"@fluidframework/core-utils/*": ["../../common/core-utils/dist/*"],
			"@fluidframework/driver-definitions": ["../../common/driver-definitions/dist/index.d.ts"],
			"@fluidframework/driver-definitions/internal": ["../../common/driver-definitions/dist/index.d.ts"],
			"@fluidframework/driver-definitions/*": ["../../common/driver-definitions/dist/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"]
}
