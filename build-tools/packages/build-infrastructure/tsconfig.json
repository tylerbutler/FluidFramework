{
	"extends": "../../../../../tsconfig.base.json",
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib",
		"types": ["node"],

		"module": "Node16",
		"moduleResolution": "node16",

		"exactOptionalPropertyTypes": false,
		"noUnusedLocals": false, // Checked in lint instead so unused variables do not block compilation
	},
}
