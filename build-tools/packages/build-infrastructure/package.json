{
	"name": "@tylerbu/build-infrastructure",
	"version": "0.0.1",
	"description": "Build infrastructure",
	"homepage": "https://fluidframework.com",
	"bugs": "https://github.com/tylerbutler/sail-monorepo/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/FluidFramework.git",
		"directory": "build-tools/packages/build-infrastructure"
	},
	"license": "MIT",
	"author": "Tyler Butler <tyler@tylerbutler.com>",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./lib/index.d.ts",
				"default": "./lib/index.js"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"main": "lib/index.js",
	"bin": {
		"buildProject": "./bin/run.mjs"
	},
	"files": [
		"/bin",
		"/dist",
		"!dist/test",
		"/lib",
		"!lib/test",
		"/oclif.manifest.json"
	],
	"scripts": {
		"build": "fluid-build --task build",
		"build:commonjs": "npm run tsc && npm run build:test",
		"build:docs": "api-extractor run --local",
		"build:esnext": "tsc --project ./tsconfig.json",
		"build:manifest": "oclif manifest",
		"build:readme": "oclif readme --version 0.0.0 --no-aliases --readme-path src/docs/cli.md",
		"build:test": "npm run build:test:esm && npm run build:test:cjs",
		"build:test:cjs": "fluid-tsc commonjs --project ./src/test/tsconfig.cjs.json",
		"build:test:esm": "tsc --project ./src/test/tsconfig.json",
		"check:biome": "biome check .",
		"check:format": "npm run check:biome",
		"clean": "rimraf --glob dist lib \"**/*.tsbuildinfo\" \"**/*.build.log\" nyc _api-extractor-temp",
		"compile": "npm run build:esnext",
		"eslint": "eslint --format stylish src",
		"eslint:fix": "eslint --format stylish src --fix --fix-type problem,suggestion,layout",
		"format": "npm run format:biome",
		"format:biome": "biome check --write .",
		"lint": "npm run eslint",
		"lint:fix": "npm run eslint:fix",
		"test": "npm run test:mocha",
		"test:coverage": "c8 npm run test",
		"test:mocha": "mocha --recursive lib/test",
		"tsc": "fluid-tsc commonjs --project ./tsconfig.cjs.json && copyfiles -f ../../../common/build/build-common/src/cjs/package.json ./dist"
	},
	"dependencies": {
		"@antfu/ni": "^23.3.0",
		"@manypkg/get-packages": "^2.2.2",
		"@oclif/core": "^4.2.3",
		"cosmiconfig": "^8.3.6",
		"detect-indent": "^6.1.0",
		"execa": "^5.1.1",
		"fs-extra": "^11.2.0",
		"micromatch": "^4.0.8",
		"oclif": "^4.17.13",
		"package-manager-detector": "^0.2.8",
		"picocolors": "^1.1.1",
		"read-pkg-up": "^7.0.1",
		"resolve-workspace-root": "^2.0.0",
		"semver": "^7.6.3",
		"simple-git": "^3.27.0",
		"sort-package-json": "2.14.0",
		"tinyglobby": "^0.2.10",
		"type-fest": "^4.33.0",
		"typescript": "~5.5.4"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@fluid-tools/api-markdown-documenter": "^0.17.1",
		"@fluidframework/build-common": "^2.0.3",
		"@fluidframework/build-tools-bin": "npm:@fluidframework/build-tools@^0.49.0",
		"@fluidframework/eslint-config-fluid": "^5.4.0",
		"@microsoft/api-extractor": "^7.49.1",
		"@types/chai": "^4.3.20",
		"@types/chai-arrays": "^2.0.3",
		"@types/fs-extra": "^11.0.4",
		"@types/micromatch": "^4.0.9",
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.12.7",
		"@types/semver": "^7.5.8",
		"c8": "^10.1.3",
		"chai": "^4.5.0",
		"chai-arrays": "^2.2.0",
		"concurrently": "^9.1.2",
		"copyfiles": "^2.4.1",
		"eslint": "^8.57.0",
		"eslint-plugin-chai-friendly": "^1.0.1",
		"memfs": "^4.14.0",
		"mocha": "^10.7.3",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typedoc": "^0.26.10",
		"typedoc-plugin-markdown": "^4.2.9",
		"unionfs": "^4.5.4"
	},
	"oclif": {
		"bin": "buildProject",
		"dirname": "buildProject",
		"commands": "./lib/commands",
		"additionalHelpFlags": [
			"-h"
		],
		"additionalVersionFlags": [
			"-V"
		],
		"plugins": [],
		"repositoryPrefix": "<%- repo %>/blob/main/build-tools/packages/build-infrastructure/<%- commandPath %>",
		"topicSeparator": " "
	}
}
