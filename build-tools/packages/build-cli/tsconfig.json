{
	"extends": "@fluidframework/build-common/ts-common-config.json",
	"compilerOptions": {
		"composite": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"types": ["node"],
		"noImplicitAny": true,
		"noUnusedLocals": true,

		// settings required to use swc
    "module": "ESNext",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
  },
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*"],
}
